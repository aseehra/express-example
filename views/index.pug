html
  head
    include _common_header.pug
  body
    include _navbar.pug
    .container
      each error in errors
        .alert.alert-danger(role='alert')=error
      each info in infos
        .alert.alert-info(role='alert')=info

      h1 Welcome to Learn About Me!

      each user in users
        .panel.panel-default
          .panel-heading
            a(href=`/users/${user.username}`) #{user.name()}
          if user.bio
            .panel-body
              user.bio
