html
  head
    link(rel="stylesheet"
         href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
  body
    include _navbar.pug
    .container
      each error in errors
        .alert.alert-danger(role='alert')
          #{error}
      each info in infos
        .alert.alert-info(role='alert')
          #{info}
      
      each user in users
        .panel.panel-default
          .panel-heading
            a(href="/users/#{user.username}") #{user.name()}
          if user.bio
            .panel-body
              #{user.bio}
