html
  head
    include _common_header.pug
  body
    include _navbar.pug
    .container
      each error in errors
        .alert.alert-danger(role='alert')=error
      each info in infos
        .alert.alert-info(role='alert')=info

      h1 Sign up

      form(action="/signup" method="post")
        input.form-control(name="username" type="text" placeholder="Username" required autofocus)
        input.form-control(name="password" type="password" placeholder="Password" required)
        input.btn.btn-primary.btn-block(type="submit" value="Sign up")
